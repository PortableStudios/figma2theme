{
  "name": "@portablestudios/figma2theme",
  "version": "0.1.0",
  "author": "Darcy Glennen <darcy@portable.com.au>",
  "license": "MIT",
  "main": "lib/src/index.js",
  "bin": {
    "figma2theme": "lib/src/index.js"
  },
  "files": [
    "/lib"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/PortableStudios/figma2theme"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "dev": "ts-node ./src/index.ts",
    "prebuild": "rimraf ./lib",
    "build": "tsc -p .",
    "postbuild": "rimraf ./lib/theme && copyfiles ./templates/** ./lib",
    "lint": "eslint . --fix --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "global:install": "yarn build && yarn global add file:$PWD",
    "global:remove": "yarn global remove figma2theme"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn typecheck & lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --fix"
  },
  "dependencies": {
    "@types/color-convert": "^1.9.0",
    "@types/ejs": "^3.0.4",
    "@types/fs-extra": "^9.0.1",
    "@types/lodash.setwith": "^4.3.6",
    "@types/prettier": "^2.1.0",
    "@types/rimraf": "^3.0.0",
    "color-convert": "^2.0.1",
    "colors": "^1.4.0",
    "commander": "^6.1.0",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.5",
    "figma-api": "^1.5.5",
    "fs-extra": "^9.0.1",
    "lodash.setwith": "^4.3.2",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@chakra-ui/core": "^1.0.0-rc.3",
    "@chakra-ui/theme": "^1.0.0-rc.3",
    "@storybook/addon-actions": "^6.0.20",
    "@storybook/addon-essentials": "^6.0.20",
    "@storybook/addon-links": "^6.0.20",
    "@storybook/react": "^6.0.20",
    "@storybook/theming": "^6.0.20",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "babel-loader": "^8.1.0",
    "copyfiles": "^2.3.0",
    "eslint": "^7.7.0",
    "eslint-config-airbnb-typescript": "^9.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.13",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-is": "^16.13.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  }
}
